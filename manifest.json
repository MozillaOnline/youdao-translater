{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.0",
  "default_locale": "zh",

  "icons":{
    "32": "icon/icon-32.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "button/icon-16.png",
      "32": "button/icon-32.png"
      }
  },

  "background": {
    "scripts": ["main.js"]
  },

  "options_ui": {
    "page": "settings/options.html"
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "activeTab",
    "storage"
  ]
}
